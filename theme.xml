<theme>
	<formatVersion>4</formatVersion>

	<view name="system, basic, detailed, video, grid">

		<image name="background" extra="true">
			<path>./_inc/images/bg.png</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<color>ffffff</color>
		</image>

		<helpsystem name="help">
			<textColor>000000</textColor>
			<iconColor>000000</iconColor>
			<origin>0 0</origin>
			<pos>1 1</pos>
			<fontSize>0.01</fontSize>
		</helpsystem>

	</view>

	<feature supported="carousel">

		<view name="system">

		<text name="logoText">
			<fontPath>./_inc/fonts/topic-bold.ttf</fontPath>
			<color>ffff00</color>
			<text>${system.fullName}</text>
			<alignment>center</alignment>
			<forceUppercase>true</forceUppercase>
			<lineSpacing>1</lineSpacing>
			<fontSize>0.1</fontSize>
		</text>

			<carousel name="systemcarousel">
				<type>vertical</type>
				<color>00000000</color>
				<logoSize>1 0.2</logoSize>
				<logoScale>1</logoScale>
				<maxLogoCount>3</maxLogoCount>
				<origin>0.5 0.5</origin>
				<pos>0.5 0.44</pos>
				<size>1 0.92</size>
			</carousel>
		
			<text name="systemInfo">
				<color>ff00ff</color>
				<fontSize>0.05</fontSize>
				<origin>0.5 0</origin>
				<pos>0.5 0.51</pos>
				<size>1 0.03</size>
			</text>

			<image name="helpBG" extra="true">
				<path>./_inc/images/color.png</path>
				<origin>0.5 1</origin>
				<pos>0.5 1</pos>
				<size>1 0.05</size>
				<color>00000088</color>
			</image>

			<image name="helpSystem" extra="true">
				<path>./_inc/images/help-system.png</path>
				<origin>0.5 1</origin>
				<pos>0.5 1</pos>
				<size>1 0.05</size>
				<color>ff00ffAA</color>
			</image>

			<image name="carouselbg" extra="true">
				<color>000000bb</color>
				<path>./_inc/images/color.png</path>
				<origin>0.5 0.5</origin>
				<pos>0.5 0.46</pos>
				<size>1 0.2</size>
			</image>

			<image name="topline" extra="true">
				<path>./_inc/images/gradient.png</path>
				<origin>0 0</origin>
				<pos>0 0.35</pos>
				<size>1 0.04</size>
				<color>ff00ff</color>
			</image>

			<image name="bottomline" extra="true">
				<path>./_inc/images/gradient.png</path>
				<origin>0 0</origin>
				<pos>0 0.55</pos>
				<size>1 0.04</size>
				<color>ff00ff</color>
			</image>

		</view>
	
	</feature>

	<view name="basic">

		<text name="logoText">
			<fontPath>./_inc/fonts/topic-bold.ttf</fontPath>
			<color>ff00ff</color>
			<origin>0.5 0</origin>
			<pos>0.5 0</pos>
			<size>1 0.08</size>
			<fontSize>0.08</fontSize>
			<text>${system.fullName}</text>
			<alignment>center</alignment>
			<lineSpacing>1</lineSpacing>
			<forceUppercase>true</forceUppercase>
		</text>

		<textlist name="gamelist">
			<selectorColor>00000000</selectorColor>
			<selectedColor>FFFF00</selectedColor>
			<primaryColor>FFFFFF</primaryColor>
			<secondaryColor>00FFFF</secondaryColor>
			<origin>0.5 0.5</origin>
			<pos>0.5 0.51</pos>
			<size>1 0.8</size>
			<fontPath>./_inc/fonts/topic-bold.ttf</fontPath>
			<fontSize>0.08</fontSize>
			<forceUppercase>true</forceUppercase>
		</textlist>

		<image name="helpBG" extra="true">
			<path>./_inc/images/color.png</path>
			<origin>0.5 1</origin>
			<pos>0.5 1</pos>
			<size>1 0.05</size>
			<color>00000044</color>
		</image>

		<image name="helpGamelist" extra="true">
			<path>./_inc/images/help-gamelist.png</path>
			<origin>0.5 1</origin>
			<pos>0.5 1</pos>
			<size>1 0.05</size>
			<color>ff00ffaa</color>
		</image>

	</view>

	<view name="grid">

		<text name="logoText">
			<fontPath>./_inc/fonts/topic-bold.ttf</fontPath>
			<color>ff00ff</color>
			<origin>0.5 0</origin>
			<pos>0.5 0</pos>
			<size>1 0.08</size>
			<fontSize>0.08</fontSize>
			<text>${system.fullName}</text>
			<alignment>center</alignment>
			<lineSpacing>1</lineSpacing>
			<forceUppercase>true</forceUppercase>
		</text>

		<text name="md_name">
			<fontPath>./_inc/fonts/topic-bold.ttf</fontPath>
			<origin>0.5 0</origin>
			<pos>0.5 0.09</pos>
			<size>1 0.09</size>
			<fontSize>0.08</fontSize>
			<color>ffff00ff</color>
			<forceUppercase>true</forceUppercase>
		</text>

		<imagegrid name="gamegrid">
			<pos>0.168 0.2388</pos>
			<size>0.88 0.6596</size>
			<margin>0.06 0.06</margin>
		</imagegrid>
		<gridtile name="default">
			<size>0.18 0.18</size>
			<padding>6 6</padding>
			<backgroundImage>./_inc/images/tile.png</backgroundImage>
			<backgroundCornerSize>0 0</backgroundCornerSize>
			<backgroundColor>ff00ffff</backgroundColor>
			<imageColor>ffffffff</imageColor>
		</gridtile>
		<gridtile name="selected">
			<size>0.28 0.28</size>
			<padding>6 6</padding>
			<backgroundImage>./_inc/images/tile.png</backgroundImage>
			<backgroundCornerSize>0 0</backgroundCornerSize>
			<backgroundColor>ffff00ff</backgroundColor>
			<imageColor>ffffffff</imageColor>
		</gridtile>

		<image name="helpBG" extra="true">
			<path>./_inc/images/color.png</path>
			<origin>0.5 1</origin>
			<pos>0.5 1</pos>
			<size>1 0.05</size>
			<color>00000044</color>
		</image>

		<image name="helpGamelist" extra="true">
			<path>./_inc/images/help-gamelist.png</path>
			<origin>0.5 1</origin>
			<pos>0.5 1</pos>
			<size>1 0.05</size>
			<color>ff00ffAA</color>
		</image>

	</view>

	<view name="detailed, video">

		<image name="topline" extra="true">
			<path>./_inc/images/color.png</path>
			<origin>0.5 0</origin>
			<pos>0.5 0</pos>
			<size>1 0.08</size>
			<color>00000088</color>
		</image>

		<text name="logoText">
			<origin>0.5 0</origin>
			<pos>0.5 0</pos>
			<color>FF00FF</color>
			<forceUppercase>true</forceUppercase>
			<text>${system.fullName}</text>
			<fontPath>./_inc/fonts/topic-bold.ttf</fontPath>
			<fontSize>0.08</fontSize>
			<size>1 0.08</size>
			<lineSpacing>1</lineSpacing>
			<alignment>center</alignment>
		</text>

		<image name="shade" extra="true">
			<path>./_inc/images/color.png</path>
			<origin>0.5 0.5</origin>
			<pos>0.5 0.5</pos>
			<size>1 1</size>
			<color>00000066</color>
		</image>

		<textlist name="gamelist">
			<selectorColor>00000000</selectorColor>
			<selectedColor>FFFF00cc</selectedColor>
			<primaryColor>FFFFFFcc</primaryColor>
			<secondaryColor>00FF00cc</secondaryColor>
			<origin>0.5 0.5</origin>
			<pos>0.5 0.51</pos>
			<size>1 0.8</size>
			<fontPath>./_inc/fonts/topic-bold.ttf</fontPath>
			<fontSize>0.08</fontSize>
			<forceUppercase>true</forceUppercase>
			<alignment>center</alignment>
		</textlist>

		<image name="helpBG" extra="true">
			<path>./_inc/images/color.png</path>
			<origin>0.5 1</origin>
			<pos>0.5 1</pos>
			<size>1 0.05</size>
			<color>00000088</color>
		</image>

		<image name="helpGamelist" extra="true">
			<path>./_inc/images/help-gamelist.png</path>
			<origin>0.5 1</origin>
			<pos>0.5 1</pos>
			<size>1 0.05</size>
			<color>ff00ffAA</color>
		</image>

			<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount">
				<color>00000000</color>
				<origin>0 0</origin>
				<forceUppercase>1</forceUppercase>
				<fontSize>0.02</fontSize>
				<size>0.13 0.01</size>
			</text>

			<text name="md_developer, md_publisher, md_genre, md_players, md_playcount">
				<color>00000000</color>
				<origin>0 0</origin>
				<forceUppercase>1</forceUppercase>
				<fontSize>0.02</fontSize>
				<size>0.13 0.01</size>
			</text>
			<datetime name="md_releasedate, md_lastplayed">
				<color>00000000</color>
				<origin>0 0</origin>
				<forceUppercase>1</forceUppercase>
				<fontSize>0.02</fontSize>
				<size>0.13 0.01</size>
			</datetime>

				<text name="md_lbl_rating">
					<pos>1 1</pos>
				</text>
				<rating name="md_rating">
					<color>00000000</color>
					<pos>1 1</pos>
					<size>0.1 0.02</size>
				</rating>

				<text name="md_lbl_players">
					<pos>1 1</pos>
				</text>
				<text name="md_players">
					<pos>1 1</pos>
				</text>

				<text name="md_lbl_genre">
					<pos>1 1</pos>
				</text>
				<text name="md_genre">
					<pos>1 1</pos>
				</text>

				<text name="md_lbl_developer">
					<pos>1 1</pos>
				</text>
				<text name="md_developer">
					<pos>1 1</pos>
				</text>

				<text name="md_lbl_publisher">
					<pos>1 1</pos>
				</text>
				<text name="md_publisher">
					<pos>1 1</pos>
				</text>

				<text name="md_lbl_releasedate">
					<pos>1 1</pos>
				</text>
				<datetime name="md_releasedate">
					<pos>1 1</pos>
				</datetime>

				<text name="md_lbl_playcount">
					<pos>1 1</pos>
				</text>
				<text name="md_playcount">
					<pos>1 1</pos>
				</text>

				<text name="md_lbl_lastplayed">
					<pos>1 1</pos>
				</text>
				<datetime name="md_lastplayed">
					<pos>1 1</pos>
				</datetime>
		
			<text name="md_description">
				<origin>0 0</origin>
				<pos>1 1</pos>
				<size>0.27 0.225</size>
				<color>00000000</color>
				<fontSize>0.02</fontSize>
				<alignment>left</alignment>
				<forceUppercase>1</forceUppercase>
				<lineSpacing>1.5</lineSpacing>
			</text>

		<image name="md_image">
			<origin>0.5 0.5</origin>
			<pos>0.5 0.5</pos>
			<maxSize>1 1</maxSize>
		</image>

	</view>

	<feature supported="video">
	<view name="video">

		<image name="md_marquee">
			<color>00000000</color>
			<pos>1 1</pos>
			<origin>0 0</origin>
			<maxSize>0 0</maxSize>
		</image>

 		<video name="md_video">
			<origin>0.5 0.5</origin>
			<pos>0.5 0.5</pos>
			<maxSize>1 1</maxSize>
			<delay>3</delay>
			<default>true</default>
			<showSnapshotNoVideo>true</showSnapshotNoVideo>
			<showSnapshotDelay>true</showSnapshotDelay>
		</video>
	</view>
	</feature>

	<feature supported="z-index">
		<view name="detailed, video">

			<image name="topline" extra="true">
				<zIndex>50</zIndex>
			</image>

			<textlist name="gamelist">
				<zIndex>50</zIndex>
			</textlist>

			<text name="logoText">
				<zIndex>50</zIndex>
			</text>

			<image name="helpGamelist" extra="true">
				<zIndex>50</zIndex>
			</image>

			<image name="helpBG" extra="true">
				<zIndex>50</zIndex>
			</image>

			<image name="shade" extra="true">
				<zIndex>49</zIndex>
			</image>

			<image name="md_image">
				<zIndex>1</zIndex>
			</image>

			<image name="background" extra="true">
				<zIndex>0</zIndex>
			</image>

		</view>
	</feature>

</theme>
